<div class="content">
  <h1>
    HEEL<br>
    COOL  
  </h1>

</div>

<div class="container">
  <div class="row">
    <% dato.articles.each do |article| %>
      <div class="col-xs-10 col-xs-offset-1">
        <% link_to "/articles/#{article.slug}.html", class: "article-card" do %>
          <div class="banner-card" style="background-image:url('<%= article.banner_image.url(w: 800, h: 600, fm: :jpg) %>');"></div>
          <div class="article-content">
            <h2>
              <%= article.title %>
            </h2>
            <h5>
              <%= article.subtitle %>
            </h5>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
