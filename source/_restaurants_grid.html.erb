<div class="row">
  <h3 class="text-center">
    Restaurants
  </h3>
  <% dato.restaurants_collections.each do |card| %>
  <div class="col-xs-12 col-sm-4">
    <div class="card-picture" style="background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.28) 0%, rgba(74, 51, 51, 0.63) 50%), url('<%= image_path card.image.url %>');">
      <div class="card-content">
        <h3>
          <%= card.title %>
        </h3>
        <p>
          <%= card.subtitle %>
        </p>
      </div>
      <div class="card-hover">
        <div class="card-hover-content">
          <p>
            <%= card.hover_content %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
